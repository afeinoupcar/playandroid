<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afei.bat.afeiplayandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.base.BaseActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="screenSize|keyboardHidden|orientation" />
        <activity
            android:name=".ui.LoginActivity"
            android:configChanges="screenSize|keyboardHidden|orientation" />
        <activity
            android:name=".ui.activity.WebContentActivity"
            android:configChanges="screenSize|keyboardHidden|orientation" />
        <activity
            android:name=".ui.activity.KnowledgeActivity"
            android:configChanges="screenSize|keyboardHidden|orientation" />
        <activity
            android:name=".ui.activity.SearchActivity"
            android:configChanges="screenSize|keyboardHidden|orientation" />
        <activity android:name=".opengl.OpenGLActivity" />
        <activity android:name=".ui.activity.ILikeActivity"></activity>
    </application>

</manifest>