<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_adapter_item_cimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/user_icon" />

            <TextView
                android:id="@+id/home_adapter_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_toRightOf="@id/home_adapter_item_cimg"
                android:text="作者" />

            <TextView
                android:id="@+id/home_adapter_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="日期" />

        </RelativeLayout>

        <TextView
            android:id="@+id/home_adapter_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/medium" />
        <TextView
            android:id="@+id/home_adapter_item_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="标题"
            android:textSize="@dimen/small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_adapter_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="章节名称"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/big_small" />

            <ImageView
                android:id="@+id/home_adapter_item_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_no_like" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>